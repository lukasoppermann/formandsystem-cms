{
	"name": "formandsystem/cms",
	"description": "The Form&System CMS.",
	"keywords": ["cms", "formandsystem"],
	"license": "MIT",
	"type": "project",
	"repositories": [
		{
			"type": "vcs",
			"url": "https://github.com/formandsystem/api.git"
		}
	],
	"require": {
		"laravel/framework": "~5.0",
		"illuminate/html": "5.*",
		"formandsystem/api": "~2.0"
	},
	"require-dev": {
		"phpunit/phpunit": "~4.0",
		"phpspec/phpspec": "~2.1@dev",
		"fzaninotto/faker": "~1.5@dev",
		"mockery/mockery": "~0.9@dev"
	},
	"autoload": {
		"classmap": [
			"database"
		],
		"psr-4": {
			"App\\": "app/"
		}
	},
	"autoload-dev": {
		"classmap": [
			"tests/TestCase.php"
		]
	},
	"scripts": {
		"post-install-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize"
		],
		"post-update-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize"
		],
		"post-create-project-cmd": [
			"php artisan key:generate"
		]
	},
	"config": {
		"preferred-install": "dist"
	},
	"minimum-stability": "dev"
}
