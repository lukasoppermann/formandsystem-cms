{
	"name": "laravel/laravel",
	"description": "The Laravel Framework.",
	"keywords": ["framework", "laravel"],
  "repositories": [
      {
          "type": "vcs",
          "url": "https://github.com/lukasoppermann/optimization"
      },
      {
          "type": "vcs",
          "url": "https://github.com/lukasoppermann/php-utilities"
      }
	],
	"license": "MIT",
	"require": {
		"laravel/framework": "4.1.*",

    "lukasoppermann/optimization": "*@dev",
    "lukasoppermann/utilities": "*@dev"
	},
	"autoload": {
		"classmap": [
			"app/commands",
			"app/controllers",
			"app/models",
			"app/database/migrations",
			"app/database/seeds",
			"app/tests/TestCase.php"
		]
	},
	"scripts": {
		"post-install-cmd": [
			"php artisan optimize"
		],
		"post-update-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize"
		],
		"post-create-project-cmd": [
			"php artisan key:generate"
		]
	},
	"config": {
		"preferred-install": "dist"
	},
	"minimum-stability": "dev"
}
